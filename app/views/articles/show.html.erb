<p>
  <strong>Title:</strong>
  <%=@article.title %>
</p>
<p>
  <strong>Text:</strong>
  <%=@article.text %>
</p>
<button><%= link_to 'Edit', edit_article_path(@article)%></button>
<button><%= link_to 'delete', article_path(@article),method: :delete,
 data: {confirm: 'Are you sure?'}%></button><br>
<%= link_to 'Go Back', articles_path %> <br>
<%= link_to 'Go to Home', '/' %>

<h2>Comment:</h2>
<% @article.comments.each do |comment| %>

  <p>
    <STRONG>Commenter</STRONG>
    <%=comment.commenter %>
  </p>

  <p>
    <STRONG>Comment:</STRONG>
    <%= comment.body %>
  </p>

  <button><%= link_to 'delete', [comment.article, comment],method: :delete,
 data: {confirm: 'Are you sure, you want to delete this comment?'}%></button><br>

<% end %>

<%= form_for ([@article, @article.comments.build]) do |f| %>
  <p>
    <h2>Add a comment:</h2>
    <%= f.label :commenter %><br>
    <%= f.text_field :commenter %>
  </p>
  <p>
    <%= f.label :body %><br>
    <%= f.text_area :body %>
  </p>
  <p>
    <%= f.submit %>
  </p>

<%end%>

